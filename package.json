{
  "name": "probot-merge-when-green",
  "version": "1.0.0",
  "description": "Automatically merge pull requests when all tests have passed",
  "author": "Pablo Cantero <pablohstc@gmail.com> (https://github.com/phstc/probot-merge-when-green)",
  "license": "ISC",
  "repository": "https://github.com/phstc/probot-merge-when-green.git",
  "homepage": "https://github.com/phstc/probot-merge-when-green",
  "bugs": "https://github.com/phstc/probot-merge-when-green/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "probot": "^7.0.0",
    "probot-config": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.0",
    "nodemon": "^1.17.2",
    "standard": "^10.0.3",
    "smee-client": "^1.0.2",
    "ts-jest": "^23.0.0",
    "typescript": "^3.1.1",
    "typescript-eslint-parser": "^20.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  }
}
